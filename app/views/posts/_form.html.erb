<%= simple_form_for(@post) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :title, label: "Title", input_html: {class:"textarea "}, wrapper: false, label_html:{class:"label "}, autofocus: true %>
    <%= f.input :post, label: "Add text below", input_html: {class:"textarea "}, wrapper: false, label_html:{class:"label "}, autofocus: true %>
  </div>
</div>
<%= f.button :submit, class: "button is-info" %>
<% end %>