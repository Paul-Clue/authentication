<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<% if user_signed_in? %>
  <table>
    <thead>
      <tr>
        <th>Post</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><strong><><%= post.title %></strong></td>
      </tr>
      <tr>
      <td><%= post.user.email%></td>
      </tr>
      <tr>
      <td><%= post.post %></td>
      </tr>
      <tr>
      <td><%= link_to 'Show', post %></td>
      </tr>
      <tr>
      <td><%= %></td>
      </tr>
      <tr>
      <td><%= %></td>
      </tr>
      <tr>
      <td><%= %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

<% else %>
  <table>
    <thead>
      <tr>
        <th>Post</th>
        <th colspan="3"></th>
      </tr>
    </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.post %></td>
            <td><%= link_to 'Show', post %></td>
          </tr>
        <% end %>
      </tbody>
  </table>
<% end %>

<br>

<%= link_to 'New Post', new_post_path %>
